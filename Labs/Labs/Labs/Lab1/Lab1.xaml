<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Labs.Lab1.Lab1">
    <StackLayout>
        <Label Text="Lab1" FontSize="25" HorizontalOptions="Center"/>
        <Picker x:Name="ColorChooser" Title="Chose your color" Margin="0,20,0,0"/>

        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="0,20,0,0">
            <Button x:Name="OK" WidthRequest="60" HeightRequest="60" 
                        Text="OK" FontSize="26"
                    Clicked="OK_Clicked"/>
            <Button x:Name="Cancel" WidthRequest="80" HeightRequest="60"
                        Text="Cancel"
                    Clicked="Cancel_Clicked"/>
        </StackLayout>

        <BoxView x:Name="ColorBox" 
                 WidthRequest="150" HeightRequest="150" 
                 BackgroundColor="Black"
                 VerticalOptions="Center"
                 HorizontalOptions="Center"
                 CornerRadius="10"
                 Margin="0,30,0,0"/>

        <Label x:Name="ColorName" Text="Black" HorizontalOptions="Center"></Label>
    </StackLayout>
</ContentPage>