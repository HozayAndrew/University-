<Page x:Class="TeacherProblemApp.Pages.ChoosingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TeacherProblemApp"
      mc:Ignorable="d" 
      Height="600" Width="1000"
      Title="ChoosingPage">

    <Grid>
        <StackPanel Orientation="Vertical" Width="400" Height="320">
            <Button Name="SpecialCase" Height="80" Content="Special Case" FontSize="40" Click="SpecialCase_Click"/>
            <Button Name="Experiments" Height="80" Content="Experiments" FontSize="40" Click="Experiments_Click"/>
            <Button Name="Saved" Height="80" Content="Saved Data" FontSize="40" Click="Saved_Click"/>
            <Button Name="About" Height="80" Content="About" FontSize="40" Click="About_Click"/>
        </StackPanel>
    </Grid>
</Page>
