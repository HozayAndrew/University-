<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Labs"
             x:Class="Labs.MainPage">

    <Grid x:Name="MainGrid">
        <StackLayout Margin="0,50,0,0" Padding="10,10,10,10">
            <Label Text="Labs, Khodarchenko Andrew, IS-61" 
               HorizontalOptions="Center"
               FontSize="20"
               FontAttributes="Bold"/>
            <Button x:Name="Lab1" 
                HeightRequest="50" 
                Text="Lab 1"
                FontSize="14"
                Margin="0, 20, 0, 0"
                Clicked="LabButton_Clicked"/>
            <Button x:Name="Lab2" 
                HeightRequest="50" 
                Text="Lab 2"
                FontSize="14"
                Margin="0, 10, 0, 0"
                Clicked="LabButton_Clicked"/>
            <Button x:Name="Lab3" 
                HeightRequest="50" 
                Text="Lab 3"
                FontSize="14"
                Margin="0, 10, 0, 0"
                Clicked="LabButton_Clicked"/>
            <Button x:Name="Lab4" 
                HeightRequest="50" 
                Text="Lab 4"
                FontSize="14"
                Margin="0, 10, 0, 0"
                Clicked="LabButton_Clicked"/>
        </StackLayout>
    </Grid>

</ContentPage>
